<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to use"
        android:layout_marginBottom="@dimen/title_marginBottom"
        android:textSize="25dp"
        android:textColor="#7adadf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.ご自分のコーディネートを用意してください。"
        android:layout_marginBottom="@dimen/title_marginBottom"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.CAMERAで撮影してください。"
        android:layout_marginBottom="@dimen/title_marginBottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.CLOSETに今日のコーディネートが表示されます。"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⇩　⇩　⇩"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"
        android:textColor="#7adadf" />

    <ImageButton
        android:layout_width="199dp"
        android:layout_height="175dp"
        android:src="@drawable/camera"
        android:id="@+id/menu_camera"
        android:background="#ffffff"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="!カメラは横向きに撮影してください!"
        android:textSize="10dp"
        android:layout_marginBottom="30dp"
        android:textColor="#b6b6b6"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_clear_btn"
            android:text="all clear"
            android:background="#8b1e1e1e"
            android:textColor="#ffffff"
            android:layout_marginRight="@dimen/button_margin"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_back_btn"
            android:text="back"
            android:background="#ce1e1e1e"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/button_margin" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>